<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipe_repos"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.android.exercise.ui.activity.RetrofitActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.android.exercise.ui.widget.FlowLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_github"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Github" />

            <Button
                android:id="@+id/btn_upload_multipartbody"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MultipartBody上传" />

            <Button
                android:id="@+id/btn_upload_multipartbodypart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MultipartBody.Part上传" />
        </com.android.exercise.ui.widget.FlowLayout>

        <TextView
            android:id="@+id/tv_upload_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_repos"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

</android.support.v4.widget.SwipeRefreshLayout>
