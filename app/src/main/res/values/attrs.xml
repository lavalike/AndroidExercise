<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CircleImageView">
        <attr name="border_width" format="dimension" />
        <attr name="border_color" format="color" />
    </declare-styleable>

    <!--自定义SlidingMenu属性-->
    <declare-styleable name="SlidingMenu">
        <attr name="menuRightPadding" format="dimension" />
    </declare-styleable>

    <declare-styleable name="SwipeBackLayout">
        <attr name="edge_size" format="dimension" />
        <attr name="edge_flag">
            <enum name="left" value="0" />
            <enum name="right" value="1" />
            <enum name="bottom" value="2" />
            <enum name="all" value="3" />
        </attr>
        <attr name="shadow_left" format="reference" />
        <attr name="shadow_right" format="reference" />
        <attr name="shadow_bottom" format="reference" />
    </declare-styleable>

    <attr name="SwipeBackLayoutStyle" format="reference" />

    <!--自定义水平进度条-->
    <declare-styleable name="HorizontalProgressBar">
        <attr name="progress_unreach_color" format="color" />
        <attr name="progress_unreach_height" format="dimension" />
        <attr name="progress_reach_color" format="color" />
        <attr name="progress_reach_height" format="dimension" />
        <attr name="progress_text_color" format="color" />
        <attr name="progress_text_size" format="dimension" />
        <attr name="progress_text_offset" format="dimension" />
    </declare-styleable>

    <!--盖楼-->
    <declare-styleable name="FloorView">
        <attr name="bounder_drawable" format="reference" />
    </declare-styleable>

    <!--密码输入框-->
    <declare-styleable name="PasswordView">
        <attr name="pv_max_count" format="integer" />
        <attr name="pv_border_width" format="dimension" />
        <attr name="pv_border_corner" format="dimension" />
        <attr name="pv_border_color" format="reference" />
        <attr name="pv_divider_width" format="dimension" />
        <attr name="pv_divider_color" format="reference" />
        <attr name="pv_dot_radius" format="dimension" />
        <attr name="pv_dot_color" format="reference" />
    </declare-styleable>

    <declare-styleable name="LoadingView">
        <attr name="lv_background_image" format="reference" />
        <attr name="lv_mask_color" format="color" />
        <attr name="lv_mask_width" format="dimension" />
    </declare-styleable>

    <declare-styleable name="RevealView">
        <attr name="rl_mask_color" format="reference" />
        <attr name="rl_src" format="reference" />
    </declare-styleable>

    <declare-styleable name="PageSwitchView">
        <attr name="psv_color" format="reference" />
        <attr name="psv_duration" format="integer" />
    </declare-styleable>

    <declare-styleable name="StateButton">
        <attr name="sb_text_normal" format="string" />
        <attr name="sb_text_loading" format="string" />
        <attr name="sb_text_success" format="string" />
        <attr name="sb_text_color" format="color" />
        <attr name="sb_text_size" format="dimension" />
        <attr name="sb_text_icon_padding" format="dimension" />
        <attr name="sb_icon_width" format="dimension" />
        <attr name="sb_icon_height" format="dimension" />
        <attr name="sb_icon_color" format="color" />
        <attr name="sb_icon_stroke_width" format="dimension" />
    </declare-styleable>
</resources>